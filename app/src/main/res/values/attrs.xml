<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--RoundImageView-->
    <declare-styleable name="RoundedImageView">
        <attr name="riv_corner_radius" format="dimension" />
        <attr name="riv_corner_radius_top_left" format="dimension" />
        <attr name="riv_corner_radius_top_right" format="dimension" />
        <attr name="riv_corner_radius_bottom_left" format="dimension" />
        <attr name="riv_corner_radius_bottom_right" format="dimension" />
        <attr name="riv_border_width" format="dimension" />
        <attr name="riv_border_color" format="color" />
        <attr name="riv_mutate_background" format="boolean" />
        <attr name="riv_oval" format="boolean" />
        <attr name="android:scaleType" />
        <attr name="riv_tile_mode">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="riv_tile_mode_x">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="riv_tile_mode_y">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
    </declare-styleable>


    <declare-styleable name="VideoLoadingView">
        <!--进度条初始颜色-->
        <attr name="progressColor" format="string" />
        <!--进度条最小宽度即初始宽度-->
        <attr name="minProgressWidth" format="dimension" />
        <!--view最小宽度-->
        <attr name="minWidth" format="dimension" />
        <!--view最小高度-->
        <attr name="minHeight" format="dimension" />
    </declare-styleable>


    <declare-styleable name="ShimmerFrameLayout">
        <attr name="auto_start1" format="boolean" />
        <attr name="base_alpha1" format="float" />
        <attr name="duration1" format="integer" />
        <attr name="repeat_count1" format="integer" />
        <attr name="repeat_delay1" format="integer" />
        <attr name="repeat_mode1" format="enum">
            <enum name="restart1" value="1" />
            <enum name="reverse1" value="2" />
        </attr>
        <attr name="angle1" format="enum">
            <enum name="cw_01" value="0" />
            <enum name="cw_901" value="90" />
            <enum name="cw_1801" value="180" />
            <enum name="cw_2701" value="270" />
        </attr>
        <attr name="dropoff1" format="float" />
        <attr name="fixed_width1" format="dimension" />
        <attr name="fixed_height1" format="dimension" />
        <attr name="intensity1" format="float" />
        <attr name="relative_width1" format="float" />
        <attr name="relative_height1" format="float" />
        <attr name="shape1" format="enum">
            <enum name="linear1" value="0" />
            <enum name="radial1" value="1" />
        </attr>
        <attr name="tilt1" format="float" />
    </declare-styleable>


    <declare-styleable name="ShimmerLayout">
        <attr name="shimmer_color" format="color|reference" />
        <attr name="shimmer_animation_duration" format="integer|reference" />
        <attr name="shimmer_auto_start" format="boolean|reference" />
        <attr name="shimmer_angle" format="integer|reference" />
        <attr name="shimmer_mask_width" format="float|reference" />
        <attr name="shimmer_gradient_center_color_width" format="float|reference" />
        <attr name="shimmer_reverse_animation" format="boolean|reference" />
    </declare-styleable>
</resources>